<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#018786">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/meeting_title_tv"
                        android:layout_width="320dp"
                        android:layout_height="30dp"
                        android:text="Meeting Title"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/meeting_description_tv"
                        android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:text="Meeting Description..."
                        android:elevation="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/time_tv_meeting"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Time : "
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/date_tv_meeting"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Date : "
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/location_tv_meeting"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Location : "
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/meeting_delete_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_delete_forever_24" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>